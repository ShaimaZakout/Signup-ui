<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layout_background"
        android:padding="24dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="Sign up"
            android:textColor="@color/whiet"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/SubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/devonshire"
            android:text="Monster Techno"
            android:textColor="@color/whiet"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_marginBottom="60dp"/>


        <LinearLayout
            android:id="@+id/lLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="150dp"
            android:orientation="vertical"
            android:layout_marginBottom="100dp">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edtext_background"
                android:drawableLeft="@drawable/ic_perm"
                android:drawablePadding="16dp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="16dp"
                android:textColorHint="@color/hintColor"
                android:textColor="@color/whiet"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edtext_background"
                android:drawableLeft="@drawable/ic_mail"
                android:drawablePadding="16dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textColorHint="@color/hintColor"
                android:textColor="@color/whiet"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edtext_background"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="16dp"
                android:hint="password"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColorHint="@color/hintColor"
                android:textColor="@color/whiet"/>

            <EditText
                android:id="@+id/passCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edtext_background"
                android:drawableLeft="@drawable/ic_perm"
                android:drawablePadding="16dp"
                android:hint="password check"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColorHint="@color/hintColor"
                android:textColor="@color/whiet"/>

        </LinearLayout>

        <TextView
            android:id="@+id/lastText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:text="    Already have an account Login Here"
            android:textColor="@color/whiet"
            android:textSize="15sp" />

        <Button
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/lastText"
            android:background="@drawable/btn_background"
            android:text="Sign up"
            android:textColor="@color/whiet"
            android:textSize="16sp" />

    </RelativeLayout>
</ScrollView>